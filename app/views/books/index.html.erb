<div class="container">
  <h2 class="section h2">
    作品一覧
  </h2>
    <ul class="flexbox all_books">
      <div class="row">
        <% @books.each do |book| %>
          <li class="each book col-xs-4">
            <div class="book-title">
              <%= book.title %>
            </div>
            <div class="book-image">
              <%= link_to image_tag(book.goods, :class => "img-thumbnail"), book_path(book.id), method: :get %>
            </div>
          </li>
        <% end %>
     </div>
    </ul>
</div>
  <%= paginate(@books) %>
